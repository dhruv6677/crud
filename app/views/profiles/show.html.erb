





<section class="vh-100" style="background-color: #9de2ff;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-md-9 col-lg-7 col-xl-5">
        <div class="card" style="border-radius: 15px;">
          <div class="card-body p-4">
            <div class="d-flex text-black">
              <div class="flex-shrink-0">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                  alt="Generic placeholder image" class="img-fluid"
                  style="width: 180px; border-radius: 10px;">
              </div>
              <div class="flex-grow-1 ms-3">
              <td><%= @profile.first_name %></td>
                <p class="mb-2 pb-1" style="color: #2b2a2a;">Senior Journalist</p>
                <div class="d-flex justify-content-start rounded-3 p-2 mb-2"
                  style="background-color: #efefef;">
                  <div>
                  
                    <p class="small text-muted mb-1">Profile id</p>
                    <%= @profile.id %>
                  </div>
                  <div class="px-3">
                    <p class="small text-muted mb-1">first name</p>
                    <%= @profile.first_name %>
                  </div>
                  <div>
                    <p class="small text-muted mb-1">Last name</p>
                    <%= @profile.last_name %>
                  </div>
                
                </div>
                <div class="d-flex pt-1">
                  
                  <tr>
                  <td><%= link_to "Back to profiles", profiles_path, class:"btn btn-outline-primary me-1 flex-grow-1" %></td>
                  <td><%= link_to "Edit Details ", edit_profile_path, class:"btn btn-primary flex-grow-1" %></td>
                 
                </tr>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>